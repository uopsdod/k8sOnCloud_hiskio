# 啟動 docker
sudo service docker start
docker ps

# 建立 cluster
minikube start --driver docker
minikube status

# 建立 Persistent Volume (PV)
kubectl get storageclass
vi simple-volume-pv.yaml
=====
apiVersion: v1
kind: PersistentVolume
metadata:
  name: app-pv
spec:
  storageClassName: standard
  volumeMode: Filesystem
  capacity:
    storage: 2Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: /data
    type: DirectoryOrCreate
=====

# 部署 Persistent Volume (PV)
kubectl apply -f simple-volume-pv.yaml
kubectl get pv

# 建立 Persistent Volume Claim (PVC)
vi simple-volume-pvc.yaml
=====
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: app-pvc
spec:
  storageClassName: standard
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
=====

# 部署 Persistent Volume Claim (PVC)
kubectl apply -f simple-volume-pvc.yaml
kubectl get pvc

# 建立 simple-deployment-pvc
cp simple-deployment.yaml simple-deployment-pvc.yaml
vi simple-deployment-pvc.yaml
=====
apiVersion: apps/v1
kind: Deployment
metadata:
  name: app-deployment
spec:
  replicas: 3
  selector:
    matchLabels:
      app: app-pod
  template:
    metadata:
      labels:
        app: app-pod
    spec:
      containers:
      - name: app-container
        image: uopsdod/k8s-hostname-amd64-beta:v1
        ports:
        - containerPort: 80
        volumeMounts:
          - mountPath: /app/data
            name: app-volume
      volumes:
        - name: app-volume
          persistentVolumeClaim:
            claimName: app-pvc
=====

# 部署 simple-deployment-pvc
kubectl apply -f simple-deployment-pvc.yaml
kubectl get deployments
kubectl describe deployments app-deployment

# 測試 volume 生命週期
kubectl get pods
kubectl exec -it [pod_name] -- bash
  cd /app/data
  ls
  touch file001.txt
  ls
  exit

kubectl delete pods --all
kubectl get pods
kubectl exec -it [pod_name] -- bash
  cd /app/data
  ls
  exit

# 真正的硬碟位置
docker ps
docker exec -it minikube bash
  cd /data
  ls
  exit

# 資源清理
kubectl delete deployments --all
kubectl delete pvc --all
kubectl delete pv --all

# 刪除 cluster (optional)
minikube stop
minikube delete
minikube status

# 完成！

